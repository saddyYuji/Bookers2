<h2>User info</h2>
<%= form_for(@user) do |f| %>
	<div class="field">
		<label for="name">Name</label>
		<%= f.text_field :name, autofocus:true, id: "user_name" %>
	</div>
	<div class="field">
		<label for="user_image">Image</label>
		<%= f.attachment_field :profile_image, placeholder: "profileImage" %>
	</div>
	<div class="field">
		<label for="introduction">Introduction</label>
		<%= f.text_area :introduction, id: "user_introduction" %>
	</div>
	<div class="actions">
		<%= f.submit "Update User"%>
	</div>
<% end %>
