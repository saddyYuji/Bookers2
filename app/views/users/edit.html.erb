<h2>User info</h2>
<%= form_for(@user) do |f| %>
<!-- error message -->
	<% if @user.errors.any? %>
		<div id="error_explanation">
			<h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
			<ul>
				<% @user.errors.full_messages.each do |m| %>
					<li>
						<%= m %>
					</li>
				<% end %>
			</ul>
		</div>
	<% end %>
<!-- form -->
	<div class="field">
		<label for="name">Name</label>
		<%= f.text_field :name, autofocus:true, id: "user_name" %>
	</div>
	<div class="field">
		<label for="user_image">Image</label>
		<%= f.attachment_field :profile_image, placeholder: "profileImage" %>
	</div>
	<div class="field">
		<label for="introduction">Introduction</label>
		<%= f.text_area :introduction, id: "user_introduction" %>
	</div>
	<div class="actions">
		<%= f.submit "Update User"%>
	</div>
<% end %>
