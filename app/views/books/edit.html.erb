<div class="container">
	<p id="notice"></p>
	<div class="row">
		<div class="col-md-6 col-md-offsest-3">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
				<div class="field row">
					<label for="book_title">Title</label>
					<%= f.text.field :title, autofocus: true %>
				</div>
				<div class="field row">
					<label for="book_opinion">Opinion</label>
					<%= f.text.area :body %>
				</div>
				<div class="action row">
					<%= f.submit "Update Book" %>
				</div>
			<% end %>
			<%= link_to "Show", book_path(@book.id) %>
			<%= link_to "Back", user_path(current_user.id) %>
			<!-- このcurrent_user.id動くかわからん -->
		</div>
	</div>
</div>
