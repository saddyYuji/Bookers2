<div class="row">
	<div class="col-md-6 col-md-offset-3">

<!-- error message -->
		<% if @book.errors.any? %>
			<div id="error_explanation">
				<h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
				<ul>
					<% @book.errors.full_messages.each do |m| %>
						<li>
							<%= m %>
						</li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<h1>Editing Book</h1>
		<%= form_for(@book) do |f| %>
			<div class="field row">
				<label for="book_title">Title</label>
				<%= f.text_field :title, autofocus: true, class: "col-xs-12"%>
			</div>
			<div class="field row">
				<label for="book_opinion">Opinion</label>
				<%= f.text_area :body, class: "col-xs-12"%>
			</div>
			<div class="action row">
				<%= f.submit "Update Book", class: "btn btn-primary col-xs-12", style: "margin: 10px 0;" %>
			</div>
		<% end %>
		<%= link_to "Show", book_path(@book.id) %>
		|
		<%= link_to "Back", user_path(current_user.id) %>
		<!-- このcurrent_user.id動くかわからん -->
	</div>
</div>
