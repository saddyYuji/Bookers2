<div class="row">
	<!-- user info -->
	<%= render 'users/user_info', user: @user, book_new: @book_new %>

	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
			<tbody>
				<tr>
					<td>
						<%= link_to user_path(@book.user.id) do %>
							<%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:"50x50" %>
							<br>
							<%= @user.name %>
						<% end %>
					</td>
					<td>
						<%= @book.title %>
					</td>
					<td>
						<%= @book.body %>
					</td>
					<% if @user == current_user %>
						<td>
							<%= link_to 'Edit', edit_book_path(@book.id), class:"btn-sm btn-success"%>
						</td>
						<td>
							<%= link_to 'Destroy', "/books/#{@book.id}", class:"btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
						</td>
					<% end %>
				</tr>
			</tbody>
		</table>
	</div>
</div>
